# $ZDOT_user/conf.d/globaloptions
#
# The file containing the default shell options for all shells
#
# Do:
#	- set options that influence the shell's behaviour in scripts
#
# Do not:
#	- set options related to command-prompts, history and so on
#	- set options related to non-interactive login shells
#


setopt clobber             # allow overwriting files with '>'
setopt localoptions        # use a separate option-space for functions
setopt extendedglob        # extended glob: ^   negates
                           #                [i-j] matches range,
                           #                ~   exludes a pattern
                           #                **  recursive glob: **/foo finds
                           #                    all files 'foo'
                           #                *** as ** but with symlink 
                           #                    following
                           #                (#aX)foo matches 'foo' with X
                           #                    deviations
setopt equals              # =foo gets expanded to /path/to/foo
setopt nochasedots         # example:    /foo/bar -> /some/dir
                           # if set:     /foo/bar/.. -> /some
                           # if not set: /foo/bar/.. -> /foo
setopt nochaselinks        # example: /foo/bar -> /some/dir
                           # if set:  cd /foo/bar => PWD=/some/dir
                           # if not set:          => PWD=/foo/bar
setopt nonomatch           # do not abort on globbing-failures
setopt nohup               # do not kill background jobs at exit
setopt shwordsplit         # split white space separated strings into arrays
