# $ZDOT_USER/conf.d/aliases
#
# This file contains the definition of aliases
#
# Do:
#       - set aliases here
#
# Do not:
#       - set anything else :)
#

# things the shell shouldn't correct on:
alias mkdir='nocorrect mkdir'
alias cp='nocorrect cp'
alias mv='nocorrect mv'

# globbing doesn't make sense for mkdir
alias mkdir='noglob mkdir'

# make ls fancy if available
case $ZDOT_OS_SHORT in
  Linux)
    alias ls='ls --color -p -F -T 0'
    if builtin which dircolors >/dev/null && \
      [ -r $ZDOT_USER/lib/GNULS.colors ] ; then
      eval `dircolors -b $ZDOT_USER/lib/GNULS.colors`
    fi

  ;;
  FreeBSD)
    alias ls='ls -F -G'
  ;;
esac

# having an 'open' is convenient:
[ -x /usr/bin/xdg-open ] && open() { xdg-open $@ & }

# smart-ass cd (autocomplete will however not work
# to complete to files)
function cd () {
  if [[ -f "${1}" ]]; then
    [[ ! -e ${1:h} ]] && return 1
    builtin cd "${1:h}"
    [[ ! -z "$EDITOR" ]] && print -z ${EDITOR:t} "${1:t}"
  elif [[ -z "${1}" ]]; then
    cd $HOME
  else
    builtin cd "${1}"
  fi
}

# tmux tends to underestimate the capabilities of lilyterm
[ X$TERM = Xxterm ] && alias tmux='tmux -2'
